<% value = presenter.thumbnail.render(@image_options.merge({class: 'd-block'})) %>
<% if value %>
  <div class="document-thumbnail mb-2">
    <%= helpers.link_to_document(presenter.document, value, 'aria-hidden': true, tabindex: -1, counter: @counter) %>
    <%= helpers.iiif_drag_n_drop(exhibit_specific_manifest, document: @document) if exhibit_specific_manifest %>
  </div>
<% end %>
