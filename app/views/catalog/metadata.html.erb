<div class='view-metadata'>
  <div class='modal-header'>
    <button type='button' class='ajax-modal-close close' data-dismiss='modal' aria-hidden='true'>Ã—</button>
    <h3 class='modal-title'>Metadata: <%= presenter(@document).heading %></h3>
  </div>
  <div class='modal-body'>
    <%= render partial: 'metadata' %>
  </div>
  <div class='modal-footer'>
    <button type='button' class='btn btn-default view-in-modal' data-dismiss='modal'>Close</button>
    <%= link_to 'Download',
                solr_document_path(@document, format: 'mods'),
                class: 'btn btn-primary',
                download: "#{@document.id}.mods.xml"
    %>
  </div>
</div>
